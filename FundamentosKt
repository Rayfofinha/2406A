 fun main() {

// Laços de repetição - Loops   
// 
// repeat - repita
// while - enquanto
// do..while - faça..enquanto
// for - para
// 
//repeat - repita 
//vai repetir uma determinada ação uma determinada quantidade de vezes 
// 
//Estrutura do repeat 
//
// repeat(númeroVezes){ 
// ação
// }             
/*
repeat(8){
    println("Isso é um teste, testando, testando")
} 

//Exercício:  
//
   
 var casa = 6   
     
    repeat(8){  
        println(casa ++)
    }                
    */
    
  //Laço while - enquanto 
  //
  // enquanto uma condição for verdadeira, uma determinada ação estará sendo executada 
  // Estrutura do while 
  // 
  // while(condição){  
  // ação 
  // }
        
   /* 
    var contador = 0 
    while(contador < 10){
          println(contador++ )
    }             
    */  
     /*
    //Exercício:   
    
     var bateria = 100
    while(bateria >= 0){
          println("$bateria%")       
          
          
          when(bateria){     
              15 ->{println("Aparelho descarregando, conecte no carregador!")}   
              0 ->{println("Aparelho Desligando!")}
          
    }     
            bateria--      
    }  */           
        
   // while -> ENQUANTO uma determinada ação for verdadeira, uma determinada ação será 
   // executada  
   
   // do..while
   //    
   // uma determinada ação será executada, ENUQUANTO uma determinada condição for 
   // verdadeira 
   
   //Estrutura: 
   //
   //do{  
   //ação 
   //}while(condição)         
   /*
  var contador = 0 
     
  do{  
       println(contador++)  
  }while(contador > 10)
     
     */      
     
   // for - para..package
   // 
   // PARA cada item em um intervalo ou colection, uma determinada ação será executada 
   // Estrutura: 
   // 
   // for (vAuxiliar in intervalo ou colection){   
   // ação
   // }
   // 
   
     
     for(pneu in 1..4){   
         println("1 pneu")
     
     }      
     
     //Exercícios -> Faça uma tabuada até o décimo multiplo de um número escolhido,
     //utilizando o Laço for  
     //em exssão as tabuadas do 0, 1, e 2  
}  ----------------------
 
   fun main() {
 
/*

 //Exercícios -> Faça uma tabuada até o décimo multiplo de um número escolhido,
     //utilizando o Laço for  
     //em exssão as tabuadas do 0, 1, e 2   
     //  
 
for (tabuada in 0..10){   
    println(7 * tabuada)  
    
